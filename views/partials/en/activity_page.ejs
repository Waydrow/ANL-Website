<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <h3 class="text-center"><%= blog.title %></h3>
            <h4 align="center">
                <small><i class="fa fa-calendar"
                          aria-hidden="true"></i> <%= moment(blog.date).format("YYYY-MM-DD HH:mm") %></small>
            </h4>
            <div class="text-center">
                <span><i class="fa fa-user-o" aria-hidden="true"></i> <%= blog.author.name_en %></span>
                <% if (blog.group) { %>
                &nbsp;&nbsp;<i class="fa fa-archive" aria-hidden="true"></i> <%= blog.group.name %>
                <% } %>
                <hr>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <%- blog.content %>
        </div>
    </div>

    <% if (blog.attachments.length != 0) { %>
    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div style="border-top: solid lightgray 0.5px;">
                <table class="table table-hover">
                    <caption><i class="fa fa-paperclip" aria-hidden="true"></i> Attachments</caption>
                    <tbody>
                    <% blog.attachments.forEach(function(file) { %>
                    <tr>
                        <td><a href="/file?id=<%= file._id %>"><%= file.name %></a></td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <% } %>
</div>