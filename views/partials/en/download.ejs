<div class="row">
    <div class="col-sm-offset-2 col-sm-8">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th class="text-center">File Name</th>
                <th class="text-center">Size</th>
                <th class="text-center">Introduction</th>
                <th class="text-center">Uploader</th>
            </tr>
            <% if (files.length == 0) { %>
            <tr>
                <td colspan="4" class="text-center">None</td>
            </tr>
            <% } else { %>
            <% files.forEach(function (file) { %>
            <tr>
                <td><a href="/download?id=<%= file._id %>"><%= file.name %></a></td>
                <td><%= (file.size / 1024).toFixed(1) %> KB</td>
                <td><%= file.introduction === "" ? "None" : file.introduction %></td>
                <td><%= file.uploader.name_en %></td>
            </tr>
            <% }); %>
            <% } %>
        </table>
    </div>
</div>